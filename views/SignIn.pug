doctype html
head
    meta(charset='UTF-8')
    title PiggyBankHomePage
    script(defer='' src='https://kit.fontawesome.com/8f059f76f5.js' crossorigin='anonymous')
    link(rel='stylesheet' href='css/PiggyBankCSS.css')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    script(defer,src='JS/PiggyBank.js')
header.navbar
    a.nav(href='http://localhost:3000/piggyBank')
        i.fa.fa-fw.fa-home
        |  Home
    a.nav(href='http://localhost:3000/aboutUs')
        i.fas.fa-users
        |  About US
    a.nav(href='http://localhost:3000/contactUs')
        i.fa.fa-fw.fa-envelope
        |  Contact US
body(class="Clean")
    #LoginSignUp(style='display: inline')
        p.TextForPiggyWelcome
            | #{v1}
    #gridContainer(style='display: grid;margin-top: 10%')
        div
            form.LoginForm(action='/Login' name='myForm' method='post')
                label(for='email') Email:
                br
                input#email(style='text-align:left' type='email' name='email' placeholder='Please insert your email' required='')
                br
                label(for='password') Password:
                br
                input#password(style='text-align:left' type='password' name='password' placeholder='Please insert your password' minlength='8' required='')
                br
                input(type='submit' class='subButton' value='Login' onclick='submitFormLogin()')
            p.textTour2(style='display: inline')  Doesnt have account? then:
            button.SignupButton(onclick="location.href='http://localhost:3000/signUp'") Sign Up
footer
    p.copyright Piggy Bank Accounting &copy; 2022
